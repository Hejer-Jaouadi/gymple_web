{% extends 'baseBack.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div  class="main-panel">
        <div class="content-wrapper">
            <div class="page-header" style="margin: 0 0 4.5rem 0;">
                <h3 class="page-title"> USER </h3>

            </div>
            <div class="row" style="margin: auto;">
                <div class="col-md-6 grid-margin stretch-card" style="margin:auto;">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-right">
                                <div class="col-7">
                                    <h4 class="card-title" style="color: #ff6600;">USER Information</h4>
                                </div>
                                <div class="col-4 text-right" style="display: -webkit-box;">
                                    <a  style="margin-left: -110px;" class="btn btn-outline-primary btn-fw" href="{{ path('app_user_index') }}">Back</a>
                                    <form style=" margin-left: 5px;" method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-outline-danger btn-fw">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <form class="forms-sample" readonly="true">
                               
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Email </label>
                                    <input type="text" class="form-control" id="exampleInputUsername1" value="{{user.email }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">First Name</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.firstName }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Last Name</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.lastName }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Id Card Number</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.idCard }}" >
                                </div>
                                {% if user.role=="member"%}
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Height </label>
                                    <input type="text" class="form-control" id="exampleInputUsername1" value="{{user.height }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Weight</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.weight }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Training Level</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.trainingLevel }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Membership Type</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.membership.type }}" >
                                </div>
                               
                                {%endif%}
                                {%if user.role=="trainer"%}
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Cost (h)</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.costPerHour }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Experience</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.experience }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Description</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ user.description }}" >
                                </div>
                                {%endif%}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </tbody>
    </table>

{% endblock %}





