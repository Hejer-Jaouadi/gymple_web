{% extends 'baseBack.html.twig' %}

{% block title %}Gym{% endblock %}

{% block body %}

    <div  class="main-panel">
        <div class="content-wrapper">
            <div class="page-header" style="margin: 0 0 11.5rem 0;">
                <h3 class="page-title"> GYM </h3>

            </div>
            <div class="row" style="margin: auto;">
                <div class="col-md-6 grid-margin stretch-card" style="margin:auto;">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-right">
                                <div class="col-7">
                                    <h4 class="card-title">GYM Information</h4>
                                </div>
                                <div class="col-4 text-right" style="display: -webkit-box;">
                                    <a  style="margin-left: -123px;" class="btn btn-outline-primary btn-fw" href="{{ path('app_gym_index') }}">Back</a>
                                    <form style=" margin-left: 15px;" method="post" action="{{ path('app_gym_delete', {'idg': gym.idg}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gym.idg) }}">
                                        <button class="btn btn-outline-danger btn-fw">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <form class="forms-sample" readonly="true">
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Id Gym</label>
                                    <input type="text" class="form-control" id="exampleInputUsername1" value="{{  gym.idG }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Gym Location </label>
                                    <input type="text" class="form-control" id="exampleInputUsername1" value="{{gym.location }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Gym Facilities</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" value="{{ gym.facilities }}" >
                                </div>
                                <a class="btn btn-outline-primary btn-fw" href="{{path('app_gym_edit', {'idg': gym.idg}) }}">edit</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </tbody>
    </table>

{% endblock %}
