{% extends 'baseFront.html.twig' %}


{% block body %}
    <!-- Pricing Section Begin -->
    <section class="pricing-section service-pricing spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Our Sub-Gyms</span>
                        <h2>Here you will find the different gyms with the different rooms belonging to that gym</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                {% for gym in gyms %}
                    <div class="col-lg-4 col-md-8">
                        <div class="ps-item">
                            <h3>This gym has these following information : </h3>
                            <div class="pi-price">
                                <h2>{{ gym.location }}</h2>
                                <span>{{ gym.facilities }}</span>
                            </div>
                            <h2>And these different rooms </h2>
                            <ul>
                                {% for room in rooms %}
                                    {% if room.idgym.idg == gym.idg %}
                                        <li>{{ room.roomname }}</li>
                                    {% endif %}
                                {% endfor %}
                            </ul>

                        </div>
                    </div>
                {%  endfor %}


            </div>
        </div>
    </section>
    <!-- Pricing Section End -->
{% endblock %}