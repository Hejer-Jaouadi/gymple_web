{% extends 'baseFront.html.twig' %}


{% block body %}



    <section class="services-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Want to find more about our gym ? </span>
                        <h2>Below you'll find sub-Gyms available :</h2>
                    </div>
                </div>
            </div>


            <div class="row">


                    {% for gym in gyms %}
                        <div class="col-lg-6 order-lg-2 col-md-9 p-10">
                            <div class="ss-text" style="round: #252525; padding: 20px 70px; background-color: rgb(243,97,0)">

                                    <h2 style="color: #000000" ><i class="fa fa-map-marker" ></i> {{ gym.location }} </h2>
                                    <span style="color: white">{{ gym.facilities }}</span>
                                <h2 style="color: #000000">----------------------------</h2>


                                <h2> <span class="flaticon-002-dumbell"></span> And these different rooms </h2>
                                <ul style="color: white ">
                                    {% for room in rooms %}
                                        {% if room.idgym.idg == gym.idg %}
                                            <li>{{ room.roomname }}</li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                                <img src="https://api.qrserver.com/v1/create-qr-code/?data={{gym.location}},{{ gym.facilities }}&amp;size=50x50" alt="" title="Gym information is as follows :" style="margin-left: 390px"/>
                            </div>
                        </div>
                    {%  endfor %}


           </div>



            <div class="blog-pagination">
                <a>{{ knp_pagination_render(gyms) }}</a>
            </div>
        </div>

    </section>


    <section class="contact-section spad">
        <div class="container">

            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12087.069761554938!2d-74.2175599360452!3d40.767139456514954!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c254b5958982c3%3A0xb6ab3931055a2612!2sEast%20Orange%2C%20NJ%2C%20USA!5e0!3m2!1sen!2sbd!4v1581710470843!5m2!1sen!2sbd" height="550" style="border:0;" allowfullscreen=""></iframe>
            </div>
        </div>
    </section>
    <section class="banner-section set-bg" data-setbg={{ asset('Front/img/banner-bg.jpg')}} style="background-image: url(&quot;img/banner-bg.jpg&quot;);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="bs-text service-banner">
                        <h2>Exercise until the body obeys.</h2>
                        <div class="bt-tips">Where health, beauty and fitness meet.</div>
                        <a href="https://www.youtube.com/watch?v=4-zjQvTDnbw" class="play-btn video-popup"><i class="fa fa-caret-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}