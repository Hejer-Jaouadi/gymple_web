{% extends 'baseFrontproduct.html.twig' %}


{% block body %}
    <section class="pricing-section service-pricing spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Our Products</span>
                        <h2>Choose what fits you</h2>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                {% for prod in p  %}
                <div class="col-lg-4 col-md-8">

                    <div class="ps-item">

                        <h3>{{ prod.name }}</h3>
                        <div class="pi-price">
                            <h2>$ {{ prod.price }}</h2>
                            <span>Price</span>
                        </div>
                        <ul>
                            <li>{{ prod.category }}</li>
                            <li>{{ prod.description }}</li>
                            <li>{{ prod.quantity }} Left</li>

                            <li>Month to mouth</li>
                            <li>No time restriction</li>
                        </ul>
                        <form action="/checkout" method="POST">


                            <a class="primary-btn pricing-btn" href="{{ path('cart_add', {'id':prod.IdP}) }}">panier</a>
                        </form>

                        <a href="#" class="thumb-icon"><i class="fa fa-picture-o"></i></a>
                    </div>

                </div>
                {% endfor %}
            </div>

        </div>

    </section>

{% endblock %}