

{% extends 'baseBack.html.twig' %}

{% block body %}
    <div  class="main-panel">
        <div class="content-wrapper">
            <div class="page-header" style="margin: 0 0 11.5rem 0;">
                <h3 class="page-title"> ROOM </h3>

            </div>
            <div class="row" style="margin: auto;">
                <div class="col-md-6 grid-margin stretch-card" style="margin:auto;">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-right">
                                <div class="col-9">
                                    <h4 class="card-title">ROOM Information</h4>
                                </div>
                                <div class="col-2 text-right" style="display: -webkit-box;">
                                    <a  style="margin-left: -55px;" class="btn btn-outline-primary btn-fw" href="{{ path('app_room_index') }}">Back</a>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-12">
                                    {% if not form.vars.valid %}
                                        {% for child in  form.children %}
                                            {% for error in child.vars.errors %}
                                                <div class="alert alert-danger">{{ error.message }}</div>
                                            {% endfor %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>

                            <p class="card-description">  </p>

                            {{ form_start(form ,  {'attr' : {'novalidate' : 'novalidate'}}) }}
                            <div class="form-group">
                                <label for="exampleInputUsername1">Room name : </label>
                                {{ form_widget(form.roomname , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Room number : </label>
                                {{ form_widget(form.roomnumber , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Room capacity : </label>
                                {{ form_widget(form.max_nbr , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Room belongs to gym : </label>
                                {{ form_widget(form.idgym , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <button type="submit" class="btn btn-outline-primary btn-fw">{{ button_label|default('Save') }}</button>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
