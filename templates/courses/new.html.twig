{% extends 'base_back.html.twig' %}

{% block title %}Add New Courses{% endblock %}

{% block body %}
    <div  class="main-panel">
        <div class="content-wrapper">
            <div class="page-header" style="margin: 0 0 4.5rem 0;">
                <h3 class="page-title"> Course </h3>

            </div>
            <div class="row" style="margin: auto;">
                <div class="col-md-6 grid-margin stretch-card" style="margin:auto;">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-right">
                                <div class="col-9">
                                    <h4 class="card-title">Add course Informations</h4>
                                </div>
                                <div class="col-2 text-right" style="display: -webkit-box;">
                                    <a  style="margin-left: -40px;" class="btn btn-outline-primary btn-fw" href="{{ path('app_courses_index') }}">Back</a>
                                </div>
                            </div>

                            <p class="card-description">  </p>

                            {{ form_start(form ,  {'attr' : {'novalidate' : 'novalidate'}}) }}
                            <div class="form-group">
                                <label for="exampleInputUsername1">Date: </label>
                                {{ form_widget(form.date , {'attr' : {'class' : 'form-control' }}) }}
                            </div>

                            {{ form_start(form ,  {'attr' : {'novalidate' : 'novalidate'}}) }}

                            <div class="row align-items-center">

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Starting time : </label>
                                {{ form_widget(form.start_time , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Ending time : </label>
                                {{ form_widget(form.end_time , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Spots : </label>
                                {{ form_widget(form.nbr , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Category : </label>
                                {{ form_widget(form.category , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleInputPassword1">Address : </label>
                                {{ form_widget(form.address , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Trainer : </label>
                                {{ form_widget(form.trainer , {'attr' : {'class' : 'form-control' }}) }}
                            </div>
                            <div class="col-12">
                                {% if not form.vars.valid %}
                                    {% for child in  form.children %}
                                        {% for error in child.vars.errors %}
                                            <div class="alert alert-danger">{{ error.message }}</div>
                                        {% endfor %}
                                    {% endfor %}
                                {% endif %}
                            </div>


                            <button type="submit" class="btn btn-outline-primary btn-fw">{{ button_label|default('create') }}</button>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
