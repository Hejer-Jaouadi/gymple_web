{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Your Reservation</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Type</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.type,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Date</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.date,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.date,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Course</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.course,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.course,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Trainer</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.trainer,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.trainer,{'attr':{'class':'text-danger'}}) }}



                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Submit,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}