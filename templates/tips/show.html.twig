{% extends 'base_back.html.twig' %}

{% block title %}Tips{% endblock %}

{% block body %}
    <div  class="main-panel">
        <div class="content-wrapper">
            <div class="page-header" style="margin: 0 0 4.5rem 0;">
                <h3 class="page-title"> TIP </h3>

            </div>
            <div class="row" style="margin: auto;">
                <div class="col-md-6 grid-margin stretch-card" style="margin:auto;">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-right">
                                <div class="col-7">
                                    <h4 class="card-title" style="color: #ff6600;">Tip Informations</h4>
                                </div>
                                <div class="col-4 text-right" style="display: -webkit-box;">
                                    <a  style="margin-left: -110px;" class="btn btn-outline-primary btn-fw" href="{{ path('app_tips_index') }}">Back</a>
                                    <form style=" margin-left: 5px;" method="post" action="{{ path('app_tips_delete', {'id': tip.id}) }}" onsubmit="return confirm('Are you sure you want to delete this tip?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tip.id) }}">
                                        <button class="btn btn-outline-danger btn-fw">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <form class="forms-sample" readonly="true">
                                <div class="form-group d-none">
                                    <label for="exampleInputUsername1">Id: </label>
                                    <input type="text" class="form-control" id="exampleInputUsername1" value="{{  tip.id }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Caption: </label>
                                    <input type="text" class="form-control" id="exampleInputUsername1" value="{{tip.caption }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Category:</label>
                                    <input type="category" class="form-control" id="exampleInputEmail1" value="{{ tip.category }}" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Text:</label>
                                    <input type="email" class="form-control" id="exampleInput1" value="{{ tip.text }}" >
                                </div>
                                <a class="btn btn-outline-primary btn-fw" href="{{path('app_tips_edit', {'id': tip.id}) }}">edit</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
